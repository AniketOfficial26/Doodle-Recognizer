{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": [
      "src/**",
      "public/**",
      "package.json",
      "package-lock.json"
    ],
    "buildCommand": "npm run build"
  },
  "deploy": {
    "startCommand": "npx serve -s build -l $PORT",
    "healthcheckPath": "/"
  }
}
