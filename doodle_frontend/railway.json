{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": [
      "src/**",
      "public/**",
      "package.json",
      "package-lock.json"
    ],
    "buildCommand": "CI=false npm run build",
    "nixpacksPlan": {
      "providers": ["node"],
      "phases": {
        "install": {
          "dependsOn": ["setup"],
          "cmds": [
            "rm -f package-lock.json || true",
            "npm install --no-audit --no-fund --legacy-peer-deps"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "npx serve -s build -l $PORT",
    "healthcheckPath": "/"
  }
}
